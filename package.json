{
  "name": "node-express-typescript-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "export NODE_ENV=development && nodemon --watch 'dev-server/**/*.ts' --exec 'ts-node' dev-server/index.ts",
    "build": "export NODE_ENV=production && tsc",
    "start": "export NODE_ENV=production && node prod-server/index.js",
    "pkg": "cp ./package-pkg.json ./prod-server/package.json && pkg ./prod-server/package.json --out-path='pkg-dist'"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "chalk": "^4.0.0",
    "express": "^4.17.1",
    "i18next": "^17.0.16",
    "i18next-browser-languagedetector": "^3.0.3",
    "i18next-express-middleware": "^1.8.2",
    "i18next-node-fs-backend": "^2.1.3",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.7",
    "text-encoding": "^0.7.0",
    "url-parse": "^1.4.3",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/mongoose": "^5.5.17",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.5",
    "concurrently": "^3.6.1",
    "cors": "^2.8.4",
    "morgan": "^1.9.0",
    "ts-node": "^8.10.2",
    "tslib": "^1.13.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "typescript": "^3.9.6"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
